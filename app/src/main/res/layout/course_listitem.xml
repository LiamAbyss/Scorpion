<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:clipToPadding="false"
    android:paddingLeft="@dimen/list_padding"
    android:paddingRight="@dimen/list_padding">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/courseConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="@dimen/course_list_item_bottom_padding"
        android:background="@drawable/white_round_corners_background"
        android:clipToPadding="false"
        android:elevation="5dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/courseTitleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/course_list_item_left_padding"
            android:layout_marginTop="@dimen/course_list_item_top_padding"
            android:text="courseTitleTextView"
            android:textColor="@color/colorContrastOldISEN"
            app:layout_constraintEnd_toStartOf="@+id/courseInfoImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/courseDescriptionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/course_list_item_left_padding"
            android:text="courseDescriptionTextView"
            android:textColor="@color/colorContrastOldISEN"
            app:layout_constraintEnd_toEndOf="@+id/courseTitleTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/courseTitleTextView" />

        <TextView
            android:id="@+id/courseTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/course_list_item_left_padding"
            android:text="courseTimeTextView"
            android:textColor="@color/colorContrastOldISEN"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/courseRoomTextView" />

        <TextView
            android:id="@+id/courseTeacherTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/course_list_item_left_padding"
            android:layout_marginBottom="@dimen/course_list_item_bottom_padding"
            android:text="courseTeacherTextView"
            android:textColor="@color/colorContrastOldISEN"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/courseTimeTextView" />

        <TextView
            android:id="@+id/courseRoomTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/course_list_item_left_padding"
            android:layout_marginTop="@dimen/course_list_item_bottom_padding"
            android:text="courseRoomTextView"
            android:textColor="@color/colorContrastOldISEN"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/courseDescriptionTextView" />

        <ImageView
            android:id="@+id/courseInfoImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="@drawable/ic_outline_info_36"
            android:foregroundTint="@color/colorContrastOldISEN"
            android:scaleType="fitXY"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/ic_outline_info_36"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/colorContrastOldISEN" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>